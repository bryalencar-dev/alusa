{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
  "@alusa/lib": ["packages/lib/src/index"],
  "@alusa/lib/*": ["packages/lib/src/*"],
  "@alusa/ui": ["packages/ui/src/index"],
  "@alusa/ui/*": ["packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
